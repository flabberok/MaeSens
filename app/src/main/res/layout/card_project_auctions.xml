<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorBackgroundCards"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_project_auctions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_navigation_arrow_drop_down"
            android:layout_margin="@dimen/card_elements_margin"
            android:text="@string/meetings_in_support"
            android:gravity="center"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_auctions_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_project_auctions"
            android:background="#eef1f2"
            android:visibility="gone"/>

        <Button
            android:id="@+id/b_charity_auctions"
            style="@style/Maesens.Button.White"
            android:layout_below="@+id/rv_auctions_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_all"
            android:visibility="gone"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>